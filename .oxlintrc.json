{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": [
    "node_modules/**",
    "build/**",
    "public/build/**",
    "docker/volumes/**",
    "docs/img/**",
    "dev-secrets/**",
    "playwright-report/**"
  ],
  "rules": {
    "no-console": ["warn"],
    "no-else-return": ["error"]
  }
}
